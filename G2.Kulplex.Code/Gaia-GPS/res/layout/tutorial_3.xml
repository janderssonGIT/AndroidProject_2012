<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="80dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:src="@drawable/tutorial_favourites" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add custom POI: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp" >
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
             android:text="@string/Tutorial3" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="240dp" >

        <ImageView
            android:id="@+id/previousbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="-9dp"
		    android:src="@drawable/back_incube"  />

        <ImageView
            android:id="@+id/nextbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="220dp"
            android:src="@drawable/nextbtn" />
    </TableRow>

</FrameLayout>